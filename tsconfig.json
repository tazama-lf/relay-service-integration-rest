{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2022"],
    "allowJs": true,
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
